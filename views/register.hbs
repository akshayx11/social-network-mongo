<div class="register-user">
        <select id="title">
            <optgroup title="select">
            <option>Mr.</option>
            <option>Ms.</option>
            <option>Mrs.</option>
            </optgroup>
        </select>
        <input type="text" id="fname" placeholder="First Name"/>
        <input type="text" id="mname" placeholder="Middle Name"/>
        <input type="text" id="lname" placeholder="Last Name"/>
        <input type="email" id="user-email" placeholder="Email Address"/>  
        <input type="password" id="user-password" placeholder="Password"/> 
        <input type="text" id="user-mobileno" placeholder="Mobile number"/> <br>
        Date of Birth:<input type="date" id="user-dob" min="1901-01-01" max="2020-01-01"><br>
        <div class="gender-selection">
            <input type="radio" name="gender" value="male">Male<br>
            <input type="radio" name="gender" value="female">Female<br>
            <input type="radio" name="gender" value="other">Other<br>
        </div>
        <input type="text" id="user-city" placeholder="City"/>
        <input type="text" id="user-state" placeholder="State"/>
        <input type="text" id="user-country" placeholder="Country"/>
        <input type="submit" id="register-btn" value="register">
</div>
<br>
<div class="msg-link">
    <a href="/login">Already have account?  Login Now</a>
</div>